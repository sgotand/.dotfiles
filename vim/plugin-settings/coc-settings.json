{
  "coc.preferences.formatOnSave": true,
  /*
  "coc.preferences.formatOnSaveFiletypes": [
    "json",
    "vim",
    "go",
    "ruby",
    "rust",
    "jsonnet",
    "python", //coc-pyright
    "sh",     //coc-sh
    "bash",   //coc-sh
    "c"      //coc-clangd
  ],
  */
  "json.validate.enable": true,
  "json.format.enable": false,
  "yaml.enable": true,
  "yaml.completion": true,
  "yaml.format.enable": true,
  "yaml.schemas": {
    "kubernetes": "/manifest*.yaml"
  },
  "suggest.noselect": false,
  "suggest.preferCompleteThanJumpPlaceholder": true,
  "python.linting.enabled": true, // coc-pyright, coc-python
  "python.linting.mypyEnabled": true, // coc-pyright, coc-python
  "python.linting.flake8Enabled": true, // coc-pyright, coc-python
  "python.formatting.provider": "autopep8", // coc-pyright, coc-python
  "python.formatting.autopep8Args": ["--ignore=E501"], // coc-pyright, coc-python
  "coc.source.neosnippet.enable": true,
  "coc.source.file.enable": true,
  "coc.source.around.enable": true,
  "coc.source.buffer.enable": true,
//   "go.goplsUseDaemon": false,
//  "python.linting.pydocstyleEnabled": true,
  "languageserver": {
    "jsonnet": {
      "command": "jsonnet-language-server",
      "filetypes" :[ "jsonnet" ]
    },
//     "yaml": {
//       "command": "yaml-language-server --stdio",
//       "filetypes": ["yaml", "yml"],
//     },
    // ruby coc-solargraph
    // rust coc-rust-analyzer
    /*
    // use coc-pyright instead
    // https://github.com/fannheyward/coc-pyright
    "python" : {
      "command" : "pyls",
      "filetypes": ["py"],
      "settings": {
      }
    },
    */
    // use coc-go instead
    // https://github.com/josa42/coc-go
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.work",
        "go.mod",
        "go.sum",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    },
    "terraform": {
      "command": "terraform-lsp",
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    },
    "dockerfile": {
      "command": "docker-langserver",
      "filetypes": ["dockerfile"],
      "args": ["--stdio"]
    }
  },
  /*
  "cSpell.dictionaryDefinitions": [
      { "name": "nvim", "path": "~/.config/cspell/nvim.txt"}
